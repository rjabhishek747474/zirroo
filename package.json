{
    "name": "zirroo",
    "version": "1.0.0",
    "private": true,
    "workspaces": [
        "apps/*",
        "packages/*"
    ],
    "scripts": {
        "build": "turbo build",
        "dev": "turbo dev",
        "lint": "turbo lint",
        "test": "turbo test",
        "db:generate": "turbo db:generate",
        "db:push": "turbo db:push",
        "db:studio": "cd apps/api && npx prisma studio",
        "clean": "turbo clean && rimraf node_modules"
    },
    "devDependencies": {
        "turbo": "^2.3.0",
        "rimraf": "^6.0.0"
    },
    "engines": {
        "node": ">=18.0.0"
    },
    "packageManager": "npm@10.2.0"
}